{
	// Demo PDS Deployment
	"name": "demo-pds",
	"main": "src/index.ts",
	"compatibility_date": "2025-12-02",
	"compatibility_flags": [
		"nodejs_compat"
	],
	// Durable Object bindings
	"durable_objects": {
		"bindings": [
			{
				"name": "ACCOUNT",
				"class_name": "AccountDurableObject"
			}
		]
	},
	// Enable SQLite for the Durable Object
	"migrations": [
		{
			"tag": "v1",
			"new_sqlite_classes": [
				"AccountDurableObject"
			]
		}
	],
	// R2 bucket for blob storage
	"r2_buckets": [
		{
			"binding": "BLOBS",
			"bucket_name": "demo-pds-blobs"
		}
	],
	// Environment variables (non-secret)
	"vars": {
		"PDS_HOSTNAME": "demo-pds.example.com"
	}
	// Secrets (set via `wrangler secret put`):
	// - DID: The account's DID (did:web:demo-pds.example.com)
	// - HANDLE: The account's handle (e.g., alice.demo-pds.example.com)
	// - AUTH_TOKEN: Bearer token for write auth
	// - SIGNING_KEY: Private key for signing commits (secp256k1 JWK)
	// - SIGNING_KEY_PUBLIC: Public key for DID document (multibase)
	// - JWT_SECRET: Secret for signing session JWTs
	// Optional:
	// - PASSWORD_HASH: Bcrypt hash of account password (for app login)
}
